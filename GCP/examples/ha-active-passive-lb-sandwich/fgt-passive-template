config sys glo
    set hostname "ha-a-p-fgt2"
end
config system admin
    edit "admin"
        set password ${fgt_password}
    next
end
config system probe-response
    set mode http-probe
    set http-probe-value OK
end
config router static
    edit 1
        set gateway ${external_gateway}
        set device "port1"
    next
    edit 2
        set dst 35.191.0.0 255.255.0.0
        set gateway ${external_gateway}
        set device "port1"
    next
    edit 3
        set dst 130.211.0.0 255.255.252.0
        set gateway ${external_gateway}
        set device "port1"
    next
    edit 4
        set dst 35.191.0.0 255.255.0.0
        set gateway ${internal_gateway}
        set device "port2"
    next
    edit 5
        set dst 130.211.0.0 255.255.252.0
        set gateway ${internal_gateway}
        set device "port2"
    next
end
config system interface
    edit port1
        set description "public"
        set mode static
        set ip ${passive_port1_ip}/${mask}
        unset allowaccess
        set secondary-IP enable
        config secondaryip
            edit 1
                set ip ${elb_ip1} 255.255.255.255
                set allowaccess probe-response
            next
            edit 2
                set ip ${elb_ip2} 255.255.255.255
                set allowaccess probe-response
            next
        end
    next
    edit port2
        set description "private"
        unset allowaccess
        set mode static
        set ip ${passive_port2_ip}/${mask}
        set secondary-IP enable
        config secondaryip
            edit 1
                set ip ${internal_loadbalancer_ip} 255.255.255.255
                set allowaccess probe-response
            next
        end
    next
    edit port3
        set allowaccess ping
        set mode static
        set ip ${passive_port3_ip}/${mask}
        set description "hasync"
    next
    edit port4
        set mode static
        set ip ${passive_port4_ip}/${mask}
        set allowaccess ping https ssh fgfm
        set description "management"
    next
end
config system ha
    set group-name "gcp-group"
    set mode a-p
    set hbdev "port3" 50
    set session-pickup enable
    set ha-mgmt-status enable
    config ha-mgmt-interfaces
        edit 1
            set interface "port4"
            set gateway ${hamgmt_gateway}
        next
    end
    set override disable
    set priority 255
    set unicast-hb enable
    set unicast-hb-peerip ${active_hb_ip}
    set unicast-hb-netmask ${hb_netmask}
end
config system sdn-connector
    edit "gcp"
        set type gcp
        set ha-status enable
    next
end